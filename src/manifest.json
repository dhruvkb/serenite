{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "homepage_url": "https://dhruvkb.github.io/",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "permissions": [
    "<all_urls>",
    "*://*/*",
    "tabs"
  ],
  "icons": {
    "16": "icons/serenite-16.png",
    "32": "icons/serenite-32.png",
    "48": "icons/serenite-48.png",
    "64": "icons/serenite-64.png",
    "128": "icons/serenite-128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "__MSG_extName__",
    "default_icon": {
      "16": "icons/serenite-16.png",
      "32": "icons/serenite-32.png",
      "48": "icons/serenite-48.png",
      "64": "icons/serenite-64.png",
      "128": "icons/serenite-128.png"
    },
    "theme_icons": [
      {
        "light": "icons/yin.svg",
        "dark": "icons/yang.svg",
        "size": 16
      },
      {
        "light": "icons/yin.svg",
        "dark": "icons/yang.svg",
        "size": 32
      }
    ]
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "web_accessible_resources": [
    "icons/*.png",
    "favicon.png"
  ]
}
